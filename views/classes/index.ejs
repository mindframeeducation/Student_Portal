<% include ../partials/header %>
<table class="container ui sortable basic compact table" style = "width: 30%; margin-top: 100px;">
    <thead>
        <th class = "one wide">Class</th>
            <!--<th class = "one wide">Add class</th>-->
    </thead>
    <tbody>
        <% classList.allClasses.forEach(function(eachClass) { %>
            <tr class = "one wide">
                <td name = "<%=eachClass%>">
                    <%=eachClass%>
                    <span style = "float: right;">
                        <form action = "/classes/<%=eachClass%>?_method=DELETE" method = "POST" style = "margin-bottom: 0px;">
                            <button data-tooltip = "Delete" data-position = "left center" class = "delete-button"><i class = "trash outline icon link"></i></button>
                        </form>
                    </span>
                </td>
            </tr>
        <% }); %>
            
    </tbody>
</table>
<div class = "ui container" style = "width: 30%;">
    <button id = "addClass" class = "ui primary basic button">Add class</button>
</div>

<div class="ui small modal class"> <i class="close icon" ></i>
    <div class="content">
        <form class = "ui form" action = "/classes" method = "POST">
            <div class = "field">
                <input type = "text" name = "class" placeholder = "Class">
            </div>
            <div class = "field">
                <input class="ui blue basic button" type = "Submit"Save>
            </div>
        </form>
    </div>
</div> <!--ui small modal-->
<% include ../partials/footer %>