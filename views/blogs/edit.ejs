<% include ../partials/header %>
<div class = "ui main text container" style = "margin-bottom: 0px; margin-top: 120px;padding-left: 0;">
    <a href = "/blogs/<%=blog._id%>"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
</div>
<div class = "ui main text container segment" style = "margin-top: 10px;">
    <div class = "ui huge header">Editing: <%= blog.title %></div>
    <form class = "ui form" action = "/blogs/<%=blog._id%>?_method=PUT" method = "POST">
        <div class = "field">
            <label>Title</label>
            <input type ="text" name = "blog[title]" value = "<%=blog.title %>">
        </div>
        
        <div class = "field">
            <label>Image</label>
            <input type ="text" name = "blog[image]" value = "<%=blog.image%>">
        </div>
        
        <div class = "field">
            <label>Blog Content</label>
            <textarea name = "blog[body]"><%=blog.body%></textarea>
        </div>
        
        <div class = "field">
            <input class="ui blue basic button" type = "Submit"Save>
        </div>
    </form>
</div> 


<% include ../partials/footer %>