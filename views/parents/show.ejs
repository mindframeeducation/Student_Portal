<%include ../partials/header%>
    <div class = "ui main text container" style = "padding-bottom: 10px; margin-top: 50px;">
        <!--<a href = "/students">Go back</a>-->
        <a href = "/parents"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
        <div class = "ui raised segment" style = "padding-left: 35px;">
            <p class = "student_name">
                <strong>Parent's email/username:</strong> <%=parent.username%>
            </p>
            <a class="ui primary basic button" href = "/parents/<%=parent._id%>/students/new">
                Assign student
            </a>
            <!-- If the user is logged in and is a staff or an admin-->
        </div>
    </div> <!--ui main text container-->
    
    <div class = "ui main text container" style = "margin-bottom: 150px; margin-top: 0px;">
        <div class = "ui top raised segment">
            <div class = "ui divided items">
                <% if (parent.students) { %>
                    <% if (parent.students.length != 0) { %>
                        <% parent.students.forEach(function(student, student_index) { %>
                            <div class = "item">
                                <div class = "content">
                                    <div style = "float: right; font-size: 1em;">
                                        <button class = "delete-button" id = "divest-student-button-<%=student_index%>"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                                    </div>
                                    <div class = "description" style = "display: inline;">
                                        <p><strong>Name: </strong><%=student.fullName%></p>
                                        <p><strong>Grade: </strong><%=student.grade%></p>
                                    </div>
                                </div>
                            </div>
                            <!--Modal to remove a student starts-->
                            <div class = "ui small modal divest student" id = "divest-student-modal-<%=student_index%>"><i class = "close icon"></i>
                                <div class = "header">
                                    Remove student
                                </div>
                                <div class = "content">
                                    Are you sure you want to remove <%=student.fullName%> from this parent?
                                </div>
                                <div class = "action" style = "float: left;">
                                    <form id = "delete" action = "/parents/<%=parent.id%>/students/<%=student.id%>?_method=DELETE" title = "Remove" method = "POST">
                                        <button class = "ui basic positive button" style = "margin: 0px 5px 10px 15px;">Yes</button>
                                    </form>
                                    <button class = "ui basic negative button close-modal" style = "margin-top: 0px;vertical-align: top;display: inline">No</button>
                                </div>
                            </div>
                            <!--Modal to remove a student ends -->
                        <% }); %>
                    <% } else { %>
                        No student assigned to this parent
                    <% } %>
                <% } else { %>
                    No student assigned to this parent
                <% } %>
                
            </div> <!--ui divided items-->
        </div> <!--ui top raised segment-->
    </div> <!--ui main text container-->
<%include ../partials/footer%>