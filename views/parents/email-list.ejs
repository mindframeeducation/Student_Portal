<% include ../partials/header %>
<table class = "ui sortable container blue table" style = "width: 25%; margin: 100px auto 15px;">
    <thead>
        <tr>
            <!--Having just one column, using one wide will make it span all the way-->
            <th class="one wide">
                Email address
            </th>
        </tr>
    </thead>
    <tbody style = "height:350px; overflow-y: scroll; display: block;">
        <% emails.emails.forEach(function(email, index) { %>
            <tr>
                <td colspan="4" style = "min-width: 350px;" name = "<%=email%>">
                    <%=email %>
                    <span style = "float: right;">
                        <button data-tooltip = "Delete" data-position = "left center" class = "delete-button delete-email-button-<%=index%>"><i class = "trash outline icon link"></i></button>
                        
                    </span>
                    <div class = "ui small modal delete email" id = "delete-email-<%=index%>"><i class = "close icon"></i>
                        <div class = "header">
                            Are you sure you want to delete '<%=email%>' ?
                        </div>
                        <div class = "action">
                            <form action = "/parents/email-list/<%=email%>?_method=DELETE" method = "POST" style = "margin-bottom: 0px; display: inline">
                                <button style = "margin: 10px 5px 10px 15px;" class = "ui positive button">Yes</button>
                            </form>
                            <button class = "ui negative button close-modal" style = "margin-top: 10px;">
                                No
                            </button>
                        </div>
                    </div>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<div class = "ui container" style = "width: 25%;">
    <button id = "addEmail" class = "ui primary basic button">Add email</button>
</div>

<!--Modal for adding new email address-->
<div class="ui small modal email"> <i class="close icon" ></i>
    <div class="content">
        <form class = "ui form" action = "/parents/email-list/" method = "POST">
            <div class = "field">
                <input type = "text" name = "email" placeholder = "Email">
            </div>
            <div class = "field">
                <input class="ui blue basic button" type = "Submit"Save>
            </div>
        </form>
    </div>
</div> <!--ui small modal-->

<% include ../partials/footer %>